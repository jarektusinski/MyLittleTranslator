{
  "name": "my-little-translator",
  "author": "Jarosław Tusiński",
  "version": "0.0.1",
  "license": "MIT",
  "description": "My little translator",
  "keywords": [
    "translate"
  ],
  "main": "index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jarektusinski/MyLittleTranslator.git"
  },
  "bugs": {
    "url": "https://github.com/jarektusinski/MyLittleTranslator/issues"
  },
  "homepage": "https://github.com/jarektusinski/MyLittleTranslator#readme",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "npx prettier --write src/* & npx eslint src/* --fix"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "dist",
      "build",
      "node_modules",
      ".eslintrc.cjs",
      "*static*",
      "*.json"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react",
      "testing-library"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "all"
        }
      ],
      "no-unused-vars": "off",
      "semi": "off",
      "testing-library/no-manual-cleanup": "error",
      "testing-library/no-wait-for-snapshot": "error",
      "testing-library/prefer-explicit-assert": "error",
      "testing-library/prefer-presence-queries": "error",
      "testing-library/prefer-screen-queries": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/semi": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^16.18.108",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.2.5"
  }
}
